#!/usr/bin/env bash

_err() {
    echo "$1"
    exit 1
}

_upload() {
    read -r -p "host: " HOST
    scp ~/pet/ssh/* "$HOST:~/pet/ssh/"
}

_download() {
    read -r -p "host: " HOST
    mkdir -p ~/pet/ssh
    scp "$HOST:~/pet/ssh/*" ~/pet/ssh
}

case "$1" in
    upload)   _upload;;
    download) _download;;
    *)        _err "unrecognized command: $1";;
esac
