#!/usr/bin/env bash

_err() {
    echo "$1"
    exit 1
}

_init() {
    read -r -p "host: " HOST
    scp  "$DEST"/ssh/* "$HOST:~/pet/ssh/"
}

_keys() {
    read -r -p "host: " HOST
    mkdir -p "$DEST/ssh"
    scp "$HOST:~/pet/ssh/*" "$DEST/ssh"
}

DEST="$HOME/pet"
case "$1" in
    init) _init;;
    keys) _keys;;
    *)    _err "unrecognized command: $1";;
esac
