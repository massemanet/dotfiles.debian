#!/bin/bash
# -*- mode: shell-script -*-

# show current branch
mygitbranch() {
    if type __git_ps1 &> /dev/null
    then __git_ps1 | cut -f1 -d")" | cut -f2 -d"("
    else 2> /dev/null git rev-parse --abbrev-ref HEAD
    fi
}

# find the basename of the dir that contains the current .git
mygitdir () {
    local D;
    D=$(2> /dev/null git rev-parse --show-toplevel)
    if [ "$D" == ~ ]
    then echo "~";
    else basename "$D"
    fi
}
